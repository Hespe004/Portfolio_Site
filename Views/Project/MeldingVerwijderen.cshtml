@model Project

@{
    ViewData["Title"] = "Melding Sluiten";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Melding verwijderen</h1>

<h3>Weet je zeker dat je deze melding wil verwijderen?</h3>
<div>
    <h4>Melding</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Omschrijving)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Omschrijving)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categorie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categorie.Naam)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Datum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Datum)
        </dd>
        <dt class = "col-sm-2">

        </dt>
        <dd class = "col-sm-10">

        </dd>
    </dl>
    
    <form asp-action="MeldingVerwijderen">
        <input type="hidden" asp-for="MeldingID" value="@Model.MeldingID" />
        <input type="submit" value="Melding verwijderen" class="btn btn-danger" /> |
        <a asp-action="OverzichtMeldingen" asp-controller="Meldings">Terug naar overzicht</a>
    </form>
</div>
